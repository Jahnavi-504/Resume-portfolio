{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "src/components/About.tsx", "src/components/Contact.tsx", "src/components/Experience.tsx", "src/components/Footer.tsx", "src/components/Hero.tsx", "src/components/Navbar.tsx", "src/components/Projects.tsx", "main.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
} 